---
import { Picture } from "@astrojs/image/components";

const { title, content, image } = Astro.props;
---

<li class="overflow-hidden rounded-lg bg-white shadow-lg">
  <Picture
    src={import.meta.env.PUBLIC_URL + image.data.attributes.url}
    alt={image.data.attributes.alternativeText}
    widths={[300, 600]}
    sizes="100%"
    aspectRatio="1:1"
  />
  <div class="p-3">
    <h2 class="text-lg font-semibold text-black">
      {title}
      <span>&rarr;</span>
    </h2>
    <p class="text-sm text-slate-600">
      {content && content.length > 150 ? `${content.slice(0, 150)}...` : content}
    </p>
  </div>
</li>
